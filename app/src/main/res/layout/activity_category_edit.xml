<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maoyuchaxue.catfishclubnewsapp.activities.CategoryEditActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolBarTheme"
        >

    </android.support.v7.widget.Toolbar>

    <!--<ListView-->
        <!--android:layout_below="@+id/category_toolbar"-->
        <!--android:id="@+id/category_list"-->
        <!--android:layout_width="368dp"-->
        <!--android:layout_height="551dp"-->
        <!--tools:layout_editor_absoluteY="8dp"-->
        <!--tools:layout_editor_absoluteX="8dp">-->
    <!--</ListView>-->
    <!---->

    <TextView
        android:layout_below="@+id/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/category_intro"
        android:text="分类标签"
        />

    <View
        android:layout_below="@+id/category_intro"
        android:id="@+id/category_separator"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:background="@color/colorLine"
        android:layout_marginTop="10dp"
        />

    <com.donkingliang.labels.LabelsView
        android:layout_below="@+id/category_separator"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/labels_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:labelBackground="@drawable/tag_background"
        app:labelTextColor="@drawable/tag_text"
        app:labelTextSize="16sp"
        app:labelTextPaddingBottom="7dp"
        app:labelTextPaddingLeft="13dp"
        app:labelTextPaddingRight="13dp"
        app:labelTextPaddingTop="7dp"
        app:lineMargin="12dp"
        app:wordMargin="12dp"
        app:selectType="MULTI"
        app:maxSelect="0"/>

    <View
        android:layout_below="@+id/labels_view"
        android:id="@+id/rss_separator"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:background="@color/colorLine"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_below="@+id/rss_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/rss_intro"
        android:text="RSS源"
        />

    <View
        android:layout_below="@+id/rss_intro"
        android:id="@+id/rss_separator_2"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:background="@color/colorLine"
        android:layout_marginTop="10dp"
        />

    <com.donkingliang.labels.LabelsView
        android:layout_below="@+id/rss_separator_2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rss_labels_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:labelBackground="@drawable/tag_background"
        app:labelTextColor="@drawable/tag_text"
        app:labelTextSize="16sp"
        app:labelTextPaddingBottom="7dp"
        app:labelTextPaddingLeft="13dp"
        app:labelTextPaddingRight="13dp"
        app:labelTextPaddingTop="7dp"
        app:lineMargin="12dp"
        app:wordMargin="12dp"
        app:selectType="MULTI"
        app:maxSelect="0"/>

</RelativeLayout>