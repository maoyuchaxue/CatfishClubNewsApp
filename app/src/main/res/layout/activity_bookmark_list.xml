<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.java.team17.activities.BookmarkListActivity">

    <!--<include layout="@layout/widget_main_menu_bar"></include>-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/bookmark_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolBarTheme"
        >
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_below="@+id/bookmark_list_toolbar"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookmark_list_fragment">
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
