<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/draw_line"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/news_unit_pics_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_toEndOf="@+id/news_unit_pics_image"
        android:layout_toRightOf="@+id/news_unit_pics_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/news_unit_pics_title"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_unit_pics_intro"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="17sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_unit_pics_source"
        android:layout_weight="1"
        android:gravity="bottom"
        android:textAlignment="gravity"
        android:layout_marginLeft="12dip"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    </LinearLayout>

</RelativeLayout>

